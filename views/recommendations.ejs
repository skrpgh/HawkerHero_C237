<!DOCTYPE html>
<html>
<head>
    <title>HakerHero</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Hawker Hero</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="collapsibleNavbar">
      <!-- Left-aligned nav items -->
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>

        <!-- Modules Dropdown -->
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
            Modules
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/foodItems">Food Items</a></li>
            <li><a class="dropdown-item" href="/reviews">Reviews</a></li>
            <li><a class="dropdown-item" href="/recommendations">Recommendations</a></li>
            <li><a class="dropdown-item" href="/hawker-centers">Hawker Centers</a></li>
            <li><a class="dropdown-item" href="/view-stalls">Hawker Stalls</a></li>
            <li><a class="dropdown-item" href="/favorite">Favorites</a></li>
          </ul>
        </li>

        <% if (userRole === 'admin') { %>
          <li class="nav-item">
            <a class="nav-link" href="/admin">Admin Panel</a>
          </li>
        <% } %>
      </ul>

      <!-- Right-aligned Profile Dropdown -->
      <ul class="navbar-nav ms-auto">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown">
            <i class="bi bi-person-circle"></i> Settings
          </a>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" href="/profile">Profile Settings</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>
<body class="bg-light">

  <div class="container mt-5">
    <h1 class="text-center mb-4">Recommendations</h1>

    <form action="/recommendations" method="GET" class="form-inline justify-content-center mb-4">
      <input type="text" name="search" class="form-control mr-2" placeholder="Search..." value="<%= search || '' %>">
      <button type="submit" class="btn btn-outline-primary">Search</button>
    </form>

    <% if (messages && Array.isArray(messages) && messages.length > 0) { %>
      <div class="alert alert-success"><%= messages[0] %></div>
    <% } %>

    <% if (errors && Array.isArray(errors) && errors.length > 0) { %>
      <div class="alert alert-danger"><%= errors[0] %></div>
    <% } %>

    <% if (user && user.role && user.role === 'admin') { %>
      <div class="mb-4 text-right">
        <a href="/recommendations/add" class="btn btn-success">Add Recommendation</a>
      </div>
    <% } %>

    <div class="row">
      <% if (recommendations && Array.isArray(recommendations) && recommendations.length > 0) { %>
        <% recommendations.forEach(item => { %>
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <% if (item.image_url) { %>
                <img src="<%= item.image_url %>" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Recommendation Image">
              <% } %>
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= item.title %></h5>
                <p class="card-text flex-grow-1"><%= item.description %></p>

                <% if (user && user.role && user.role === 'admin') { %>
                  <div class="mt-3">
                  <a href="/recommendations/edit/<%= item.id %>" class="btn btn-sm btn-warning mr-2">Edit</a>
                  <form action="/recommendations/delete/<%= item.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this recommendation?');">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                  </form>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12">
        <p>No recommendations found.</p>
      </div>
    <% } %>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
