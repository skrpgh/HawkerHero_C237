<!DOCTYPE html>
<html>
<head>
    <title>HakerHero</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Hawker Hero</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="collapsibleNavbar">
      <!-- Left-aligned nav items -->
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>

        <!-- Modules Dropdown -->
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
            Modules
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/foodItems">Food Items</a></li>
            <li><a class="dropdown-item" href="/reviews">Reviews</a></li>
            <li><a class="dropdown-item" href="/recommendations">Recommendations</a></li>
            <li><a class="dropdown-item" href="/hawker-centers">Hawker Centers</a></li>
            <li><a class="dropdown-item" href="/view-stalls">Hawker Stalls</a></li>
            <li><a class="dropdown-item" href="/favorite">Favorites</a></li>
          </ul>
        </li>

        <% if (userRole === 'admin') { %>
          <li class="nav-item">
            <a class="nav-link" href="/admin">Admin Panel</a>
          </li>
        <% } %>
      </ul>

      <!-- Right-aligned Profile Dropdown -->
      <ul class="navbar-nav ms-auto">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown">
            <i class="bi bi-person-circle"></i> Settings
          </a>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" href="/profile">Profile Settings</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>
<body class="bg-light">
  <div class="container mt-5">
    <h1 class="text-center mb-4">Add Recommendation</h1>

    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% errors.forEach(error => { %>
            <li><%= error %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <form action="/recommendations/add" method="POST">
      <div class="form-group">
        <label for="title">Title</label>
        <input
          type="text"
          id="title"
          name="title"
          class="form-control"
          placeholder="Enter title"
          value="<%= typeof title !== 'undefined' ? title : '' %>"
          required
        />
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <textarea
          id="description"
          name="description"
          rows="4"
          class="form-control"
          placeholder="Enter description"
          required
        ><%= typeof description !== 'undefined' ? description : '' %></textarea>
      </div>

      <div class="form-group">
        <label for="image_url">Image URL</label>
        <input
          type="text"
          id="image_url"
          name="image_url"
          class="form-control"
          placeholder="Enter image URL"
          required
          value="<%= typeof image_url !== 'undefined' ? image_url : '' %>"
        />
      </div>

      <button type="submit" class="btn btn-primary">Add Recommendation</button>
      <a href="/recommendations" class="btn btn-secondary ml-2">Cancel</a>
    </form>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
