<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Stall</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1>Add New Stall</h1>

        <!-- Flash Messages -->
        <% if (messages && messages.length > 0) { %>
            <div class="alert alert-success">
                <%= messages %> <!-- Display success messages -->
            </div>
        <% } %>

        <% if (errors && errors.length > 0) { %>
            <div class="alert alert-danger">
                <%= errors %> <!-- Display error messages -->
            </div>
        <% } %>

        <!-- Form to add new stall -->
        <form action="/add-stall" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Stall Name</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" class="form-control" id="location" name="location" required>
            </div>

            <div class="mb-3">
                <label for="cuisine_type" class="form-label">Cuisine Type</label>
                <input type="text" class="form-control" id="cuisine_type" name="cuisine_type" required>
            </div>

            <div class="mb-3">
                <label for="center_id" class="form-label">Center ID</label>
                <input type="number" class="form-control" id="center_id" name="center_id" required>
            </div>

            <div class="mb-3">
                <label for="image_url" class="form-label">Image URL (Optional)</label>
                <input type="url" class="form-control" id="image_url" name="image_url" placeholder="Enter image URL">
            </div>

            <button type="submit" class="btn btn-primary">Add Stall</button>
        </form>


        </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

