     <div class="container mt-5">
    <h1 class="mb-4">Add New Food Item</h1>

    <!-- Flash error or success messages -->
    <% if (flash.error && flash.error.length > 0) { %>
        <div class="alert alert-danger">
            <%= flash.error.join('<br>') %> <!-- Display error messages -->
        </div>
    <% } %>

    <% if (flash.success && flash.success.length > 0) { %>
        <div class="alert alert-success">
            <%= flash.success.join('<br>') %> <!-- Display success messages -->
        </div>
    <% } %>

    <!-- Form to Add Food Item -->
    <form action="/addFood/<%= stallId %>" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="name" class="form-label">Food Name</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>

        <div class="mb-3">
            <label for="price" class="form-label">Price ($)</label>
            <input type="number" class="form-control" id="price" name="price" step="0.01" required>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" name="description" rows="4" required></textarea>
        </div>

        <div class="mb-3">
            <label for="stall_id" class="form-label">Stall ID</label>
            <input type="number" class="form-control" id="stall_id" name="stall_id" value="<%= stallId %>" readonly required>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Food Image</label>
            <input type="file" class="form-control" id="image" name="image" accept="image/*">
        </div>

        <button type="submit" class="btn btn-primary">Add Food Item</button>
    </form>

    <a href="/foodItems/<%= stallId %>" class="btn btn-secondary mt-3">Back to Food Items</a>
  </div>
</body>
