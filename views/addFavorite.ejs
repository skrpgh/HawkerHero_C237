<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hawker Hero App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Hawker Hero App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <% if (user && user.role === 'admin') { %>
                        <a class="nav-link" href="/addFavorite">Add New Favorite</a>
                    <% } %>
                </li>
            </ul>
            <% if (user) { %>
                <div class="ms-auto">
                    <a class="btn btn-outline-light" href="/logout">Logout</a>
                </div>
            <% } %>
        </div>
    </div>
</nav>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h2 class="text-center mb-4">Add New Favorite</h2>
            <form action="/addFavorite" method="POST">
                <div class="mb-4">
                    <label for="username" class="form-label">Username:</label>
                    <input type="text" class="form-control" id="username" name="username" required>
                </div>

                <div class="mb-4">
                    <label for="stall" class="form-label">Stall:</label>
                    <input type="text" class="form-control" id="stall" name="stall" required>
                </div>

                <div class="mb-4">
                    <label for="food" class="form-label">Food:</label>
                    <input type="text" class="form-control" id="food" name="food" required>
                </div>

                <div class="mb-4">
                    <label for="notes" class="form-label">Notes:</label>
                    <textarea class="form-control" id="notes" name="notes" rows="3" required></textarea>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-outline-dark">Add Favorite</button>
                </div>
            </form>
        </div>
    </div>
</div>

</body>
</html>