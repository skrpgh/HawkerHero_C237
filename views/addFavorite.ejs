<!DOCTYPE html>
<html>
<head>
    <title>HakerHero</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Hawker Hero</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="collapsibleNavbar">
      <!-- Left-aligned nav items -->
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>

        <!-- Modules Dropdown -->
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
            Modules
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/foodItems">Food Items</a></li>
            <li><a class="dropdown-item" href="/reviews">Reviews</a></li>
            <li><a class="dropdown-item" href="/recommendations">Recommendations</a></li>
            <li><a class="dropdown-item" href="/hawker-centers">Hawker Centers</a></li>
            <li><a class="dropdown-item" href="/view-stalls">Hawker Stalls</a></li>
            <li><a class="dropdown-item" href="/favorite">Favorites</a></li>
          </ul>
        </li>

        <% if (userRole === 'admin') { %>
          <li class="nav-item">
            <a class="nav-link" href="/admin">Admin Panel</a>
          </li>
        <% } %>
      </ul>

      <!-- Right-aligned Profile Dropdown -->
      <ul class="navbar-nav ms-auto">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown">
            <i class="bi bi-person-circle"></i> Settings
          </a>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" href="/profile">Profile Settings</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h2 class="text-center mb-4">Add New Favorite</h2>
            <form action="/addFavorite" method="POST">
                <div class="mb-4">
                    <label for="username" class="form-label">Username:</label>
                    <input type="text" class="form-control" id="username" name="username" required>
                </div>

                <div class="mb-4">
                    <label for="stall" class="form-label">Stall:</label>
                    <input type="text" class="form-control" id="stall" name="stall" required>
                </div>

                <div class="mb-4">
                    <label for="food" class="form-label">Food:</label>
                    <input type="text" class="form-control" id="food" name="food" required>
                </div>

                <div class="mb-4">
                    <label for="notes" class="form-label">Notes:</label>
                    <textarea class="form-control" id="notes" name="notes" rows="3" required></textarea>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-outline-dark">Add Favorite</button>
                </div>
            </form>
        </div>
    </div>
</div>

</body>
</html>