<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Items</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Hawker Hero</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <!-- Left-aligned nav items -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>

                    <!-- Modules Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                            Modules
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/foodItems">Food Items</a></li>
                            <li><a class="dropdown-item" href="/reviews">Reviews</a></li>
                            <li><a class="dropdown-item" href="/recommendations">Recommendations</a></li>
                            <li><a class="dropdown-item" href="/hawkerCentres">Hawker Centers</a></li>
                            <li><a class="dropdown-item" href="/favorites">Favorites</a></li>
                        </ul>
                    </li>

                    <% if (userRole === 'admin') { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin">Admin Panel</a>
                        </li>
                    <% } %>
                </ul>

                <!-- Right-aligned Profile Dropdown (Far right) -->
                <ul class="navbar-nav ms-auto">  <!-- ms-auto moves it to the far right -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle"></i> Settings
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="/profile">Profile Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container mt-5">
        <h1 class="text-center mb-4">Food Items for Stall ID: <%= stallId %></h1>

        <% if (userRole === 'admin') { %>
            <!-- Button to Redirect to Add Food Item Page -->
            <div class="mb-4">
                <a href="/addFood/<%= stallId %>" class="btn btn-success">Add New Food Item</a>
            </div>
        <% } %>

        <!-- Food Items Table -->
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Price ($)</th>
                    <th>Description</th>
                    <th>Image</th>
                    <% if (userRole === 'admin') { %>
                        <th>Actions</th>
                    <% } %>
                </tr>
            </thead>
            <tbody>
                <% if (foodItems.length === 0) { %>
                    <tr>
                        <td colspan="5" class="text-center">No food items found for this stall.</td>
                    </tr>
                <% } else { %>
                    <% foodItems.forEach(item => { %>
                        <tr>
                            <td><%= item.name %></td>
                            <td><%= Number(item.price).toFixed(2) %></td>
                            <td><%= item.description %></td>
                            <td>
                                <% if (item.image_url) { %>
                                    <img src="<%= item.image_url %>" width="150">
                                <% } else { %>
                                    <span>No image</span>
                                <% } %>
                            </td>
                            <% if (userRole === 'admin') { %>
                                <td>
                                    <a href="/editFood/<%= item.id %>" class="btn btn-warning btn-sm">Edit</a>
                                    <form action="/deleteFood/<%= item.id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            <% } %>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>

        <a href="/hawker-centers" class="btn btn-secondary">Back to Hawker Centers</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
