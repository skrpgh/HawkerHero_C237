<!DOCTYPE html>
<html>
<head>
    <title>HakerHero</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
            <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Hawker Hero</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <!-- Left-aligned nav items -->
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
                </li>

                <!-- Modules Dropdown -->
                <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                    Modules
                </a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="/foodItems">Food Items</a></li>
                    <li><a class="dropdown-item" href="/reviews">Reviews</a></li>
                    <li><a class="dropdown-item" href="/recommendations">Recommendations</a></li>
                    <li><a class="dropdown-item" href="/hawkerCentres">Hawker Centers</a></li>
                    <li><a class="dropdown-item" href="/favorites">Favorites</a></li>
                </ul>
                </li>

                <% if (userRole === 'admin') { %>
                <li class="nav-item">
                    <a class="nav-link" href="/admin">Admin Panel</a>
                </li>
                <% } %>
            </ul>

            <!-- Right-aligned Profile Dropdown -->
            <ul class="navbar-nav ms-auto">
                <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown">
                    <i class="bi bi-person-circle"></i> Settings
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="/profile">Profile Settings</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
                </ul>
                </li>
            </ul>
            </div>
        </div>
        </nav>

        <form class="row row-cols-lg-auto g-3 align-items-center mb-4" method="GET" action="/foodItems">
        <div class="col-12">
            <input type="text" class="form-control" name="name" placeholder="Search by name" value="<%= typeof query?.name !== 'undefined' ? query.name : '' %>">
        </div>
        <div class="col-12">
            <input type="number" step="0.01" class="form-control" name="minPrice" placeholder="Min Price" value="<%= typeof query?.minPrice !== 'undefined' ? query.minPrice : '' %>">
        </div>
        <div class="col-12">
            <input type="number" step="0.01" class="form-control" name="maxPrice" placeholder="Max Price" value="<%= typeof query?.maxPrice !== 'undefined' ? query.maxPrice : '' %>">
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Search</button>
            <a href="/foodItems" class="btn btn-outline-secondary">Reset</a>
        </div>
        </form>


    <div class="container">
        <h1 class="mt-5">Food Items</h1>

        <% if (userRole === 'admin') { %>
            <a href="/addFood" class="btn btn-success mb-3">Add New Food Item</a>
        <% } %>

        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Price ($)</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Stall ID</th>
                    <% if (userRole === 'admin') { %>
                        <th>Actions</th>
                    <% } %>
                </tr>
            </thead>
            <tbody>
                <% foodItems.forEach(item => { %>
                    <tr>
                        <td><%= item.name %></td>
                        <td><%= Number(item.price).toFixed(2) %></td>
                        <td><%= item.description %></td>
                        <td>
                            <% if (item.image_url) { %>
                                <img src="<%= item.image_url %>" width="150">
                            <% } else { %>
                                <span>No image</span>
                            <% } %>
                        </td>
                        <td><%= item.stall_id %></td>
                        <% if (userRole === 'admin') { %>
                            <td>
                                <a href="/editFood/<%= item.id %>" class="btn btn-warning btn-sm">Edit</a>
                                <a href="/deleteFood/<%= item.id %>" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        <% } %>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
        <a href="/logout" class="btn btn-outline-danger ms-2">Logout</a>
    </div>

</body>
</html>
