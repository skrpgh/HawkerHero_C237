    <div class="container">
        <h1 class="text-center mb-4">Hawker Stalls</h1>

        <!-- Add Stall Button -->
        <div class="text-center mb-4">
            <a href="/stalls/add" class="btn btn-success">Add a New Stall</a>
        </div>

        <!-- Loop through all stalls -->
        <div class="row">
            <% stalls.forEach(stall => { %>
                <div class="col-md-4 stall-card">
                    <div class="card">
                        <% if (stall.image_url) { %>
                            <img src="<%= stall.image_url %>" alt="<%= stall.name %>" class="card-img-top stall-image">
                        <% } else { %>
                            <img src="https://via.placeholder.com/300x200?text=No+Image" alt="<%= stall.name %>" class="card-img-top stall-image">
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title"><%= stall.name %></h5>
                            <p class="card-text"><strong>Cuisine:</strong> <%= stall.cuisine_type %></p>
                            <p class="card-text"><strong>Location:</strong> <%= stall.location %></p>
                            <a href="/view-stall/<%= stall.id %>" class="btn btn-primary">View Details</a>
                            <a href="/edit-stall/<%= stall.id %>" class="btn btn-warning btn-sm">Edit</a>
                            <!-- Delete Button -->
                            <form action="/hawker-stalls/delete/<%= stall.id %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <a href="/" class="btn btn-secondary btn-back">Back to Homepage</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
