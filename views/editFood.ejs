<body class="bg-light">
      <div class="container mt-5">
    <h1 class="mb-4">Edit Food Item</h1>

    <!-- Flash error or success messages -->
    <% if (flash.error && flash.error.length > 0) { %>
        <div class="alert alert-danger">
            <%= flash.error.join('<br>') %> <!-- Display error messages -->
        </div>
    <% } %>

    <% if (flash.success && flash.success.length > 0) { %>
        <div class="alert alert-success">
            <%= flash.success.join('<br>') %> <!-- Display success messages -->
        </div>
    <% } %>

    <!-- Form to edit food item -->
    <form action="/editFood/<%= food.id %>" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="name" class="form-label">Food Name</label>
            <input type="text" id="name" name="name" class="form-control" value="<%= food.name %>" required>
        </div>

        <div class="mb-3">
            <label for="price" class="form-label">Price ($)</label>
            <input type="number" id="price" name="price" class="form-control" value="<%= food.price %>" step="0.01" min="0.01" required>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea id="description" name="description" class="form-control" rows="4" required><%= food.description %></textarea>
        </div>

        <div class="mb-3">
            <label for="stall_id" class="form-label">Stall ID</label>
            <input type="number" id="stall_id" name="stall_id" class="form-control" value="<%= food.stall_id %>" required>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Update Image (optional)</label>
            <input type="file" id="image" name="image" class="form-control">
            <% if (food.image_url) { %>
                <img src="/images/<%= food.image_url %>" alt="<%= food.name %>" width="100" class="mt-3">
            <% } %>
        </div>

        <button type="submit" class="btn btn-warning">Update Food</button>
    </form>

    <a href="/admin" class="btn btn-secondary mt-3">Back to Admin Panel</a>
  </div>

</body>
</html>