<!DOCTYPE html>
<html>
<head>
    <title>HakerHero</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Hawker Hero</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="collapsibleNavbar">
      <!-- Left-aligned nav items -->
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>

        <!-- Modules Dropdown -->
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
            Modules
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/foodItems">Food Items</a></li>
            <li><a class="dropdown-item" href="/reviews">Reviews</a></li>
            <li><a class="dropdown-item" href="/recommendations">Recommendations</a></li>
            <li><a class="dropdown-item" href="/hawker-centers">Hawker Centers</a></li>
            <li><a class="dropdown-item" href="/view-stalls">Hawker Stalls</a></li>
            <li><a class="dropdown-item" href="/favorite">Favorites</a></li>
          </ul>
        </li>

        <% if (userRole === 'admin') { %>
          <li class="nav-item">
            <a class="nav-link" href="/admin">Admin Panel</a>
          </li>
        <% } %>
      </ul>

      <!-- Right-aligned Profile Dropdown -->
      <ul class="navbar-nav ms-auto">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown">
            <i class="bi bi-person-circle"></i> Settings
          </a>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" href="/profile">Profile Settings</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>
<form action="/reviewadmin" method="GET" class="mb-4" style="max-width: 400px;">
  <div class="input-group">
    <input type="text" name="q" class="form-control" placeholder="Search by rating (1-5)..." value="<%= typeof query !== 'undefined' ? query : '' %>">
    <button type="submit" class="btn btn-primary">Search</button>
  </div>
</form>



  <!-- Page Content -->
  <div class="container mt-4">
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>

    <div class="text-center mb-4">
      <h2>Reviews</h2>
    </div>

    <% for(let i = 0; i < reviews.length; i++) { %>
      <div class="card mb-4">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-3">User: <%= reviews[i].user_id %></h5>
        </div>

        <div class="card-body">
          <p><strong>Rating:</strong> <%= reviews[i].rating %> stars</p>
          <p><strong>Comment:</strong> <%= reviews[i].comment %></p>

          <% if (reviews[i].image !== null) { %>
            <img src="/images/<%= reviews[i].image %>" alt="Review Image" class="img-fluid rounded mt-3" style="width: 300px;" />
          <% } %>
        </div>

        <div class="card-footer text-end">
          <a href="/updatereview/<%= reviews[i].id %>" class="btn btn-sm btn-warning">Edit</a>
          <a href="/deletereview/<%= reviews[i].id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this review?')">Delete</a>
        </div>
      </div>
    <% } %>
  </div>
</body>
</html>