<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>HawkerHero</title>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">HawkerHero</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/addreviews">Add Review</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
<form action="/reviewadmin" method="GET" class="mb-4" style="max-width: 400px;">
  <div class="input-group">
    <input type="text" name="q" class="form-control" placeholder="Search by rating (1-5)..." value="<%= typeof query !== 'undefined' ? query : '' %>">
    <button type="submit" class="btn btn-primary">Search</button>
  </div>
</form>



  <!-- Page Content -->
  <div class="container mt-4">
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>

    <div class="text-center mb-4">
      <h2>Reviews</h2>
    </div>

    <% for(let i = 0; i < reviews.length; i++) { %>
      <div class="card mb-4">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-3">User: <%= reviews[i].user_id %></h5>
        </div>

        <div class="card-body">
          <p><strong>Rating:</strong> <%= reviews[i].rating %> stars</p>
          <p><strong>Comment:</strong> <%= reviews[i].comment %></p>

          <% if (reviews[i].image !== null) { %>
            <img src="/images/<%= reviews[i].image %>" alt="Review Image" class="img-fluid rounded mt-3" style="width: 300px;" />
          <% } %>
        </div>

        <div class="card-footer text-end">
          <a href="/updatereview/<%= reviews[i].id %>" class="btn btn-sm btn-warning">Edit</a>
          <a href="/deletereview/<%= reviews[i].id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this review?')">Delete</a>
        </div>
      </div>
    <% } %>
  </div>
</body>
</html>