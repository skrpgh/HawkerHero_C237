<!DOCTYPE html>
<html>
<head>
    <title>Hawker Centers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
      body {
        background-image: url('https://www.transparenttextures.com/patterns/white-wall-3.png');
        background-color: #fff7ec;
        background-size: cover;
      }

      h1, h2 {
        color: #c2410c; /* warm orange */
      }

      .container, .card {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        margin-top: 30px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
      }

      .btn-success {
       background-color: #c2410c;
       border-color: #c2410c;
      }

      .btn-success:hover {
       background-color: #9a3412;
       border-color: #9a3412;
      }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Hawker Hero</a>
            <div class="d-flex">
                <a class="btn btn-outline-light me-2" href="/dashboard">Dashboard</a>
                <a class="btn btn-outline-light" href="/logout">Logout</a>
            </div>
        </div>
    </nav>
<div class="container mt-5">
    <h1>Hawker Centers</h1>

    <form method="POST" action="/hawker-centers/search" class="mb-3">
        <input type="text" name="search" placeholder="Search by name or address" class="form-control mb-2">
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    <% if (user.role === 'admin') { %>
        <a href="/hawker-centers/new" class="btn btn-success mb-3">Add New Center</a>
    <% } %>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Facilities</th>
                <th>Image</th>
                <% if (user.role === 'admin') { %><th>Actions</th><% } %>
            </tr>
        </thead>
        <tbody>
            <% centers.forEach(function(center) { %>
                <tr>
                    <td><%= center.name %></td>
                    <td><%= center.address %></td>
                    <td><%= center.facilities %></td>
                    <td>
                        <% if (center.image_url) { %>
                            <img src="<%= center.image_url %>" alt="Hawker Image" style="width: 120px; height: auto; border-radius: 8px;">
                        <% } else { %>
                            <span class="text-muted">No image</span>
                        <% } %>
                    </td>

                    <% if (user.role === 'admin') { %>
                        <td>
                            <a href="/hawker-centers/edit/<%= center.id %>" class="btn btn-warning btn-sm">Edit</a>
                            <form method="POST" action="/hawker-centers/delete/<%= center.id %>" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    <% } %>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
</div>
</body>
</html>
