<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Hawker Centers</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    body {
      background-image: url('https://www.transparenttextures.com/patterns/white-wall-3.png');
      background-color: #fff7ec;
      background-size: cover;
    }

    h1,
    h2 {
      color: #c2410c;
    }

    .container {
      margin-top: 30px;
    }

    .box {
      background-color: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
      border: 2px solid #c2410c;
    }

    .box img {
      width: 100%;
      height: auto;
      border-radius: 8px;
    }

    .btn-success {
      background-color: #c2410c;
      border-color: #c2410c;
    }

    .btn-success:hover {
      background-color: #9a3412;
      border-color: #9a3412;
    }

    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }

    .btn-primary:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }

    .box-title {
      font-size: 1.5rem;
      color: #c2410c;
      font-weight: bold;
    }

    .box-text {
      font-size: 1rem;
      color: #555;
    }

    .box-actions {
      margin-top: 15px;
    }

    .box-actions .btn {
      margin-right: 5px;
    }
  </style>
</head>

<body>
  <!-- NAVIGATION BAR -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Hawker Hero</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <!-- LEFT NAV ITEMS -->
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>

          <!-- Modules Dropdown -->
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
              Modules
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/foodItems">Food Items</a></li>
              <li><a class="dropdown-item" href="/reviews">Reviews</a></li>
              <li><a class="dropdown-item" href="/recommendations">Recommendations</a></li>
              <li><a class="dropdown-item" href="/hawker-centers">Hawker Centers</a></li>
              <li><a class="dropdown-item" href="/view-stalls">Hawker Stalls</a></li>
              <li><a class="dropdown-item" href="/favorite">Favorites</a></li>
            </ul>
          </li>

        </ul>

        <!-- RIGHT NAV: Profile dropdown -->
        <ul class="navbar-nav ms-auto">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown">
              <i class="bi bi-person-circle"></i> Settings
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="dropdown-item" href="/profile">Profile Settings</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- MAIN CONTENT -->
  <div class="container">
    <h1>Hawker Centers</h1>

    <!-- SEARCH FORM -->
    <form method="POST" action="/hawker-centers/search" class="mb-3">
      <input type="text" name="search" placeholder="Search by name or address" class="form-control mb-2">
      <button type="submit" class="btn btn-primary">Search</button>
    </form>

    <!-- ADD NEW CENTER (Admin only) -->
    <% if (user && user.role === 'admin') { %>
      <a href="/hawker-centers/new" class="btn btn-success mb-3">Add New Center</a>
    <% } %>

   <!-- DISPLAY CENTER CARDS -->
  <div class="row">
    <% centers.forEach(function(center) { %>
      <div class="col-md-4">
        <div class="box">
        <h5 class="box-title"><%= center.name %></h5>
        <p class="box-text"><%= center.address %></p>
        <p class="box-text"><%= center.facilities %></p>

        <% if (center.image_url) { %>
          <img src="<%= center.image_url %>" alt="Hawker Center Image">
        <% } else { %>
          <span class="text-muted">No image</span>
        <% } %>

        <div class="box-actions">
          <a href="/view-stalls/<%= center.id %>" class="btn btn-primary">View Stalls</a>

          <!-- Heart button to favorite/unfavorite -->
          <form action="/hawker/favorite/<%= center.id %>" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-link" id="heart-btn-<%= center.id %>">
              <% if (center.is_favorited) { %>
                <i class="fa fa-heart" style="color: red;"></i> Favorite
              <% } else { %>
                <i class="fa fa-heart-o"></i> Favorite
              <% } %>
            </button>
          </form>

          <% if (user && user.role === 'admin') { %>
            <a href="/hawker-centers/edit/<%= center.id %>" class="btn btn-warning btn-sm">Edit</a>
            <form method="POST" action="/hawker-centers/delete/<%= center.id %>" style="display:inline;">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          <% } %>
        </div>
      </div>
    </div>
  <% }); %>
</div>


    <!-- BACK TO DASHBOARD -->
    <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
  </div>
</body>

</html>
